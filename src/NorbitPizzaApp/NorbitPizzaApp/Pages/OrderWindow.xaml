<Window x:Class="NorbitPizzaApp.Pages.OrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:MaterialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:NorbitPizzaApp.Pages"
        mc:Ignorable="d"
        Title="OrderWindow" Height="520" Width="270" MaxHeight="500"
MaxWidth="270" Loaded="Window_Loaded">
    <Grid Background="#F2F2F2">
        <Border Padding="10" CornerRadius="10" Background="White" Margin="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Оформление заказа" FontWeight="DemiBold" FontSize="16" Margin="0, 10, 10, 0"/>

                <StackPanel Grid.Row="1" Margin="0, 10, 5, 5">
                    <TextBlock Text="Ваш заказ:" FontSize="14"/>
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="OrderControl">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Vertical"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding ProductName}"
                                               FontSize="13"
                                               VerticalAlignment="Center"/>

                                        <StackPanel Grid.Column="1"
                                               Orientation="Horizontal"
                                               VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Format.FormatName}"
                                               FontSize="13"/>
                                            <TextBlock Text=" × " FontSize="14"/>
                                            <TextBlock Text="{Binding Format.CalculatedPrice, StringFormat={}{0:F2}}" FontSize="13" />
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
                <Separator Background="LightGray"  Grid.Row="2" VerticalAlignment="Top"/>
                <StackPanel Margin="0, 0, 0, 10" Grid.Row="2" VerticalAlignment="Center" Orientation="Horizontal">
                    <TextBlock Text="Общая стоимость:  " FontSize="15" FontWeight="DemiBold"></TextBlock>
                    <TextBlock Text="{Binding Total}" FontSize="15"/>
                </StackPanel>
                <StackPanel Grid.Row="3">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Border Margin="5" Height="30" CornerRadius="15" BorderThickness="1.5" BorderBrush="LightGray">
                            <TextBox x:Name="TbName" Margin="5 0 0 0" Padding="5" MaterialDesign:HintAssist.Hint="Имя" Height="30" Grid.Column="0"/>
                        </Border>
                        <Border Margin="5"  Grid.Column="1" Height="30" CornerRadius="15" BorderThickness="1.5" BorderBrush="LightGray">
                            <TextBox x:Name="TbLastName" Margin="5 0 0 0" Padding="5" MaterialDesign:HintAssist.Hint="Фамилия" Height="30"/>
                        </Border>
                    </Grid>
                </StackPanel>
                <StackPanel Orientation="Vertical" Grid.Row="4">
                    <Border Margin="5" Height="30" CornerRadius="15" BorderThickness="1.5" BorderBrush="LightGray">
                        <TextBox x:Name="TbAddress" Margin="5 0 0 0" Padding="5" MaterialDesign:HintAssist.Hint="Адрес" Height="30" Grid.Column="0"/>
                    </Border>
                    <Border Margin="5 5 5 10" Height="30" CornerRadius="15" BorderThickness="1.5" BorderBrush="LightGray">
                        <TextBox x:Name="TbComment" Margin="5 0 0 0" Padding="5" MaterialDesign:HintAssist.Hint="Комментарий"  Height="30" Grid.Column="1"/>
                    </Border>
                    <CheckBox x:Name="CbIsPickUp" Content="Самовывоз" FontSize="12">
                        <CheckBox.Template>
                            <ControlTemplate TargetType="CheckBox">
                                <Grid VerticalAlignment="Center">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="16"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Width="16" Height="16" Background="#FFFFA726" CornerRadius="4"/>
                                    <Path Grid.Column="0" Data="M2,8 L6,12 L14,2" Stroke="White" StrokeThickness="2" Visibility="Collapsed"
                  x:Name="Tick"/>

                                    <ContentPresenter Grid.Column="1" Margin="4,0,0,0" VerticalAlignment="Center"/>
                                </Grid>

                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="Tick" Property="Visibility" Value="Visible"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </CheckBox.Template>
                    </CheckBox>
                </StackPanel>
                <StackPanel Margin="0 10 0 0" Grid.Row="5">
                    <TextBlock Text="Способ оплаты:" FontSize="15" Margin="0 0 0 5" FontWeight="DemiBold"/>
                    <ItemsControl x:Name="PaymentMethodsControl" Margin="0,0,0,0">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <RadioButton Style="{x:Null}" Content="{Binding PaymentName}" FontSize="14" GroupName="PaymentGroup">
                                    <RadioButton.Template>
                                        <ControlTemplate TargetType="RadioButton">
                                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                <Border x:Name="Border" Width="13" Height="13" CornerRadius="8" Background="White" BorderBrush="#FFFFA726" BorderThickness="1" Margin="0,0,5,0">
                                                    <Ellipse x:Name="Dot" Width="10" Height="10" Fill="#FFFFA726" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                </Border>
                                                <ContentPresenter VerticalAlignment="Center"/>
                                            </StackPanel>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsChecked" Value="True">
                                                    <Setter TargetName="Dot" Property="Visibility" Value="Visible"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </RadioButton.Template>
                                </RadioButton>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
                <Button VerticalAlignment="Bottom" x:Name="OrderBtn" Click="OrderBtn_Click" Style="{StaticResource RoundedButton}" Height="30" Grid.Row="6" Content="Оформить заказ" Foreground="White" FontSize="14" BorderBrush="#FFFFA726" Background="#FFFFA726">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="15"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>
